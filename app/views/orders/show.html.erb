# Show
# The items in the order and:
# Their image, name and description
# Their respective quantities and line item totals
# The final amount for the order
#The email that was used

<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p> NZ testing <%= @order.line_items[0].product_id %></p>
  </div>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <% @order.line_items.each do |item| %>
            <th> <%= item.product.name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>


      
      <% @order.line_items.each do |item| %>
       <td> <%= item.product.description %> </td>
      <% end %>
       <% @order.line_items.each do |item| %>
       <td> <img style="width:150px" src="<%= item.product.image %>" /> </td>
      <% end %>
        
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
          <% @total = 0 %>
          <% @order.line_items.each do |item| %>
            <% @total += item.product.price_cents %>
          <% end %>
          <% @total %>
            $<%= @total / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>

